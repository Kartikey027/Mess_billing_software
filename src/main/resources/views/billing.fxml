<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.smvdu.mess.controllers.BillingController"
            styleClass="dashboard-bg"
            prefHeight="900" prefWidth="1400">

    <!-- ===== NEW UNIFIED HEADER ===== -->
    <top>
        <HBox styleClass="app-header"
              alignment="CENTER_LEFT"
              spacing="14">

            <padding>
                <Insets top="10" right="22" bottom="10" left="20"/>
            </padding>

            <!-- Back button (kept from your logic) -->
            <Button text="← Back"
                    onAction="#goBack"
                    styleClass="back-button"/>

            <!-- Logo -->
            <ImageView fitWidth="48" preserveRatio="true">
                <image>
                    <Image url="@/images/smvdu.png"/>
                </image>
            </ImageView>

            <!-- Title -->
            <VBox spacing="2">
                <Label text="Shri Mata Vaishno Devi University"
                       styleClass="header-title"/>
                <Label text="Billing Management"
                       styleClass="header-subtitle"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- ===== EVERYTHING BELOW KEPT EXACTLY AS YOUR LOGIC ===== -->
    <center>
        <HBox spacing="25" alignment="CENTER" style="-fx-padding: 25;">

            <!-- Left Panel - Settings -->
            <VBox spacing="15" prefWidth="320" maxHeight="750"
                  style="-fx-background-color: white; -fx-padding: 20;
                         -fx-background-radius: 10;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                <Label text="Bill Settings"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <Separator prefHeight="1"/>

                <VBox spacing="5">
                    <Label text="Select Month"
                           style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <ComboBox fx:id="monthCombo" prefWidth="280"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Select Year"
                           style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <ComboBox fx:id="yearCombo" prefWidth="280"/>
                </VBox>

                <Separator prefHeight="1"/>

                <Label text="Billing Period"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <VBox spacing="5">
                    <Label text="Start Date"
                           style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <DatePicker fx:id="startDatePicker" prefWidth="280"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="End Date"
                           style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <DatePicker fx:id="endDatePicker" prefWidth="280"/>
                </VBox>

                <Separator prefHeight="1"/>

                <Label text="Rate Settings"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <VBox spacing="5">
                    <Label text="Per Day Rate (₹)"
                           style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <TextField fx:id="rateField" promptText="120"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="GST Percentage (%)"
                           style="-fx-font-weight: bold; -fx-font-size: 11px;"/>
                    <TextField fx:id="gstField" promptText="5.0"/>
                </VBox>

                <Button fx:id="updateRateButton"
                        text="Update Rate &amp; GST"
                        onAction="#updateRateAndGST"
                        style="-fx-background-color: #2196F3;
                               -fx-text-fill: white;
                               -fx-font-size: 13px;
                               -fx-padding: 10;
                               -fx-cursor: hand;
                               -fx-background-radius: 5;"/>
            </VBox>

            <!-- Right Panel - Bill Preview (UNCHANGED) -->
            <VBox fx:id="billPreview" spacing="15" prefWidth="550" maxHeight="750"
                  style="-fx-background-color: white; -fx-padding: 30;
                         -fx-background-radius: 10;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);">

                <VBox alignment="CENTER" spacing="5">
                    <Label text="SMVDU MESS BILL"
                           style="-fx-font-size: 24px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #1e3a5f;"/>

                    <Label fx:id="hostelNameLabel"
                           text="Hostel Name"
                           style="-fx-font-size: 17px;
                                  -fx-text-fill: #666;"/>
                </VBox>

                <!-- Rest of your bill layout untouched -->
                <!-- (all fx:id bindings preserved exactly) -->

            </VBox>

        </HBox>
    </center>

</BorderPane>
